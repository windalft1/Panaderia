<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".nueva_receta"
    android:orientation="vertical"
    android:id="@+id/contenedorPadre">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="80dp"
        android:maxHeight="90dp"
        android:background="?attr/colorSecondary">

        <!-- Guideline horizontal al 10% desde arriba -->
        <!--<androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineTop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.1" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideBottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.9"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.3" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.7"/>-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.98"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3.4"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="?attr/android:colorBackground">

                <EditText
                    android:id="@+id/nombre_receta"
                    android:layout_width="250dp"
                    android:layout_height="35dp"
                    android:hint="Nombre de la receta"
                    android:background="@drawable/edittext_border_selector"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginLeft="3dp"
                android:background="?attr/android:colorBackground">

                <EditText
                    android:id="@+id/cantidad_receta"
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    android:hint="Porciones"
                    android:background="@drawable/edittext_border_selector"
                    android:inputType="number"/>

            </LinearLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:background="?attr/android:colorBackground"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/containerBloques"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="0dp"
                android:maxHeight="1200dp"/>

            <FrameLayout
                android:id="@+id/mas_ingredientes"
                android:layout_gravity="center_horizontal"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/circular_background"
                android:backgroundTint="?attr/colorSecondary"
                android:contentDescription="nueva receta">

                <ImageView
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/mas_blanco"
                    android:background="?attr/selectableItemBackgroundBorderless"/>

            </FrameLayout>

        </LinearLayout>

    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.7"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:textSize="20dp"
            android:text="Instrucciones"
            android:gravity="center"/>

        <EditText
            android:id="@+id/instrucciones"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginVertical="20dp"
            android:layout_marginHorizontal="60dp"
            android:background="@drawable/edittext_border_selector"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6"
        android:gravity="center">

        <TextView
            android:visibility="gone"
            android:id="@+id/borrar"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="Borrar"
            android:layout_marginLeft="20dp"
            android:background="#E51200"
            android:textColor="?attr/colorOnPrimary"
            android:layout_marginEnd="60dp"/>

        <TextView
            android:id="@+id/cancelar"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="Cancelar"
            android:background="#E3393E"
            android:textColor="?attr/colorOnPrimary"/>

        <TextView
            android:id="@+id/confirmar"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="Guardar"
            android:layout_marginLeft="20dp"
            android:background="?attr/colorPrimary"
            android:textColor="?attr/colorOnPrimary"/>

    </LinearLayout>

</LinearLayout>