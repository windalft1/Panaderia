<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mojes">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!--parte de arriba donde estan y se pueden seleccionar los nombres de los mojes y los tiempos-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:background="?attr/colorSecondary">
            
            <HorizontalScrollView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textoMoje1"
                        android:layout_width="160dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/bordes_circulo_arriba"
                        android:backgroundTint="?attr/android:colorBackground"
                        android:text="moje1"/>
                    
                </LinearLayout>
                
            </HorizontalScrollView>
            
            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="@drawable/bordes_circulo_arriba"
                android:backgroundTint="?attr/android:colorBackground"
                android:text="Tiempos"/>
            
        </LinearLayout>


        
    </LinearLayout>

</FrameLayout>